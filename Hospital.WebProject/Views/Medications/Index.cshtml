@using Hospital.WebProject.ViewModels.Medication
@model List<MedicationViewModel>
@foreach (var item in Model)
{
    <div class="accordion accordion-flush" id="accordionFlushExample">
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                    @item.Name
                </button>
            </h2>
            <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">@item.Description</div>
            </div>
        </div>
    </div>
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <a asp-action="Edit" asp-route-id="@item.ID" style="display:inline" class="btn btn-warning mb-3">Edit</a>
        <form asp-action="Delete" class="mb-3" asp-route-id="@item.ID" method="post" style="display:inline">
            <button class="btn btn-danger">Delete</button>
        </form>
    }
}